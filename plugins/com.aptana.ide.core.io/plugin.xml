<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="connectionPoint" name="connectionPoint" schema="schema/connectionPoint.exsd"/>
   <extension
         point="com.aptana.ide.core.io.connectionPoint">
      <connectionPointCategory
            id="com.aptana.ide.core.io.localShortcuts"
            name="Local Shortcuts"
            order="20">
      </connectionPointCategory>
      <connectionPointCategory
            id="com.aptana.ide.core.io.projectShortcuts"
            name="Project Shortcuts"
            order="10">
      </connectionPointCategory>
      <connectionPointCategory
            id="com.aptana.ide.core.io.generic"
            name="Other"
            order="100">
      </connectionPointCategory>
      <connectionPointType
            category="com.aptana.ide.core.io.localShortcuts"
            class="com.aptana.ide.core.io.LocalConnectionPoint"
            id="local"
            name="Local">
      </connectionPointType>
      <connectionPointType
            category="com.aptana.ide.core.io.projectShortcuts"
            class="com.aptana.ide.core.io.WorkspaceConnectionPoint"
            id="workspace"
            name="Project">
      </connectionPointType>
      <connectionPointType
            category="com.aptana.ide.core.io.generic"
            class="com.aptana.ide.core.io.GenericConnectionPoint"
            id="generic"
            name="Generic">
      </connectionPointType>
   </extension>
   <extension
         point="org.eclipse.core.filesystem.filesystems">
      <filesystem
            scheme="workspace">
         <run
               class="com.aptana.ide.core.io.efs.WorkspaceFileSystem">
         </run>
      </filesystem>
   </extension>
   <extension
         point="org.eclipse.core.filesystem.filesystems">
      <filesystem
            scheme="aptanavfs">
         <run
               class="com.aptana.ide.core.io.efs.VirtualFileSystem">
         </run>
      </filesystem>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.aptana.ide.core.io.internal.ConnectionPropertyTester"
            id="com.aptana.ide.core.io.connectionPropertyTester"
            namespace="com.aptana.ide.core.io.connection"
            properties="isConnected,canDisconnect"
            type="com.aptana.ide.core.io.IConnectionPoint">
      </propertyTester>
      <propertyTester
            class="com.aptana.ide.core.io.internal.ConnectionCategoryPropertyTester"
            id="com.aptana.ide.core.io.connectionCategoryPropertyTester"
            namespace="com.aptana.ide.core.io.connection.category"
            properties="id"
            type="com.aptana.ide.core.io.IConnectionPointCategory">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.internal.filesystem.local.LocalFile"
            class="com.aptana.ide.core.io.internal.LocalFileAdapterFactory">
         <adapter
               type="java.io.File">
         </adapter>
      </factory>
   </extension>

</plugin>
