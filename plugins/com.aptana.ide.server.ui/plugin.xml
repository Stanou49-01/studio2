            targetID="com.aptana.ide.server.ui.views.ServersView">
         <action
               class="com.aptana.ide.server.ui.actions.ServerStopActionDelegate"
               icon="icons/stop.gif"
               id="com.aptana.ide.server.ui.action2"
               label="%action.label.server"
               style="push"
               toolbarPath="additions"/>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="com.aptana.ide.server.launch.launchConfigurationType.httpServer"
            icon="icons/launch-httpServer.gif"
            id="com.aptana.ide.server.ui.launch.launchConfigurationTypeImage.httpServer"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="com.aptana.ide.server.ui.launchConfigurations.HttpServerLaunchConfigurationTabGroup"
            description="%launchConfigurationTabGroup.description.server"
            id="com.aptana.ide.server.ui.launchConfigurationTabGroup.httpServer"
            type="com.aptana.ide.server.launch.launchConfigurationType.httpServer"/>
   </extension>
   
