   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="ServersViewActions"
            targetID="com.aptana.ide.server.ui.serversView">
         <action
               class="com.aptana.ide.core.ui.actions.HelpAction"
               icon="icons/help.png"
               id="com.aptana.ide.server.ui.servers_context_view"
               label="%action.label.showhelp"
               style="push"
               toolbarPath="additions"/>     
   		</viewContribution>
   </extension>  
   <extension point="org.eclipse.help.contexts"> 
		<contexts file="contexts.xml" /> 
   </extension>
   
      <extension
         point="org.eclipse.ui.preferencePages">      
      <page
            category="com.aptana.ide.core.ui.preferences.GeneralPreferencePage"
            class="com.aptana.ide.server.ui.preferences.HTTPServerPreferencePage"
            id="com.aptana.ide.server.ui.preferences.httpServer"
            name="%Preferences.httpServer.name"/>
         
      <!--
      <page
          category="com.aptana.ide.core.ui.preferences.GeneralPreferencePage"
