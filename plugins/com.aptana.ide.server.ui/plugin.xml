                isEditable="true"
                label="%ServersViewBackroundColor.name"/>
		 <colorDefinition
                categoryId="com.aptana.ide.core.ui.apearance"
                colorFactory="com.aptana.ide.core.ui.DefaultForegroundFactory"
                id="com.aptana.ide.core.ui.foreground.color.serversView"
                isEditable="true"
                label="%ServersViewforeroundColor.name"/>                               
     </extension>
